{
  "settings": {
    "analysis": {
      "filter": {
        "edge_ngram_filter": {
          "type": "edge_ngram",
          "min_gram": 1,
          "max_gram": 20
        }
      },
      "analyzer": {
        "edge_ngram_analyzer": {
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "edge_ngram_filter"
          ]
        },
        "search_analyzer": {
          "tokenizer": "standard",
          "filter": [
            "lowercase"
          ]
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "id": {
        "type": "keyword"
      },
      "collegeName": {
        "type": "text",
        "analyzer": "edge_ngram_analyzer",
        "search_analyzer": "search_analyzer"
      },
      "collegeCode": {
        "type": "text"
      },
      "collegeLocation": {
        "type": "keyword"
      },
      "collegeEmail": {
        "type": "text"
      },
      "collegePhone": {
        "type": "text"
      },
      "collegeWebsite": {
        "type": "text"
      },
      "collegeDescription": {
        "type": "text"
      },
      "courses": {
        "type": "object",
        "properties": {
          "courseName": {
            "type": "keyword"
          },
          "courseCode": {
            "type": "keyword"
          }
        }
      }
    }
  }
}
